---
import Trajectory from "@/components/home/Trajectory.astro";
import Hero from "@/components/home/Hero.astro";
import Projects from "@/components/home/Projects.astro";
import SkillsSlider from "@/components/home/SkillsSlider.astro";
import Layout from "@/layouts/Layout.astro";
import { loadI18n } from "@/utils/i18n";

const t = await loadI18n({ lang: Astro.currentLocale, asset: "pages/home" });
---

<Layout title={t("title")} description={t("description")}>
  <Hero />
  <SkillsSlider />
  <Projects />
  <Trajectory />
</Layout>
